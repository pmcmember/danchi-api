{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "musics APIのスキーマ\n\n注：songCategoriesは複数指定の場合改行区切りで指定される。",
    "properties": {
        "rawIframe": {
            "type": "string"
        },
        "scApiUrl": {
            "type": "string"
        },
        "scArtistHref": {
            "type": "string"
        },
        "scArtistName": {
            "type": "string"
        },
        "scSongDescription": {
            "type": "string"
        },
        "scSongHref": {
            "type": "string"
        },
        "scSongTitle": {
            "type": "string"
        },
        "scSrc": {
            "type": "string"
        },
        "scThumbnailSrc": {
            "type": "string"
        },
        "songCategories": {
            "items": {
                "properties": {
                    "fieldId": {
                        "enum": [
                            "songCategory"
                        ],
                        "type": "string"
                    },
                    "songCategory": {
                        "type": "string"
                    }
                },
                "required": [
                    "fieldId",
                    "songCategory"
                ],
                "type": "object"
            },
            "type": "array"
        }
    },
    "required": [
        "rawIframe"
    ],
    "type": "object"
}

